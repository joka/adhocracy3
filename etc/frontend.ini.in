#
# WARNING: Please make you changes in *.ini.in file and then run buildout
#          to install it.
#

[app:main]
use = egg:${adhocracy:frontend_package_name}

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.debug_templates = true

yaml.location = ${:yaml_config}

[server:main]
use = egg:gunicorn#main
host = localhost
port = 9090
workers = 4

[loggers]
keys = root, adhocracy_frontend

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[logger_adhocracy_frontend]
level = DEBUG
handlers = console
qualname = adhocracy_frontend

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s
