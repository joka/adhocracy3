#
# WARNING: Please make you changes in *.ini.in file and then run buildout
#          to install it.
#

[app:main]
use = egg:${adhocracy:frontend_package_name}


pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.debug_templates = true
# adhocracy application yaml config
# To override default config ('adhocracy_frontend:config.yaml' add the
# absolute or package path of your custom yaml file
# yaml.location = /my/absolute/path, my_package:config.yaml, my_package:configdir

[server:main]
use = egg:gunicorn#main
host = 0.0.0.0
port = 6551
workers = 4

[loggers]
keys = root, adhocracy_frontend

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = INFO
handlers = console

[logger_adhocracy_frontend]
level = DEBUG
handlers = console
qualname = adhocracy_frontend

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(asctime)s %(levelname)-5.5s [%(name)s][%(threadName)s] %(message)s
